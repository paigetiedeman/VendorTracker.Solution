@using VendorTracker.Models;

@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <h2>Order for @Model["vendor"].VendorName</h2>
</div>

<ul>
@foreach (Order orders in @Model["order"])
{
  <li><a href='/vendor/@Model["vendor"].Id/order/@orders.Id'>@orders.Title</a></li>
}
</ul> 


<a href="/vendor" class="btn btn-dark">Return to Vendor List</a>
<a href='/vendor/@Model["vendor"].Id/order/new' class="btn btn-dark">Input a New Order</a>