@using VendorTracker.Models;

@{
  Layout = "_Layout";
}

<h2></h2>Order Details for your Vendor:</h2>

<h4>Order for @Model.VendorName</h4>

<ul>
@foreach (Order orders in Model)
{
  <li>@orders.Title</li>
  <li>@orders.Description</li>
  <li>@orders.Price</li>
  <li>@orders.Date</li>
}
</ul>

<a href="/vendor" class="btn btn-dark">Return to Vendor List</a>