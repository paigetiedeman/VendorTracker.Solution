@using VendorTracker.Models;

@{
  Layout = "_Layout";
}

<h2>Order Details for your Vendor:</h2>

<h4>Order for @Model["vendor"].VendorName</h4>

<ul>
@foreach (Order orders in @Model["order"])
{
  <li><a href='/vendor/@Model["vendor"].Id/order/@orders.Id'>@orders.Title</a></li>
}
</ul> 


<a href="/vendor" class="btn btn-dark">Return to Vendor List</a>
<a href='/vendor/@Model["vendor"].Id/order/new'>Input a New Order</a>