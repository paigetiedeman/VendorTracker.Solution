@using VendorTracker.Models;

@{
  Layout = "_Layout";
}

<h2>Your Vendors:</h2>

@if (Model.Count == 0)
{
  <p>No Vendors Here!</p>
}

<ul>
  @foreach (Vendor vendors in Model)
  {
    <li><a href="/vendor/@vendors.Id">@vendors.VendorName</a></li>
  }
</ul>

<a href="/vendor/new" class="btn btn-dark">New Vendor</a>